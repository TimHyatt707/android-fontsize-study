<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base TextStyle1 -->
    <style name="TextStyle1" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Base TextStyle2 -->
    <style name="TextStyle2" parent="android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <!-- Override Small Theme -->

    <style name="ThemeSmallFont" parent="AppTheme">
        <item name="TextStyle1">@style/TextStyle1SmallFont</item>
        <item name="TextStyle2">@style/TextStyle2SmallFont</item>
    </style>

    <!-- Override Medium Theme -->

    <style name="ThemeMediumFont" parent="AppTheme">
        <item name="TextStyle1">@style/TextStyle1MediumFont</item>
        <item name="TextStyle2">@style/TextStyle2MediumFont</item>
    </style>

    <!-- Override Large Theme -->

    <style name="ThemeLargeFont" parent="AppTheme">
        <item name="TextStyle1">@style/TextStyle1LargeFont</item>
        <item name="TextStyle2">@style/TextStyle2LargeFont</item>
    </style>

    <!-- Small Size override styles -->

    <style name="TextStyle1SmallFont" parent="@style/TextStyle1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle2SmallFont" parent="@style/TextStyle2">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Medium Size override styles -->

    <style name="TextStyle1MediumFont" parent="@style/TextStyle1">
        <item name="android:textSize">28sp</item>
    </style>

    <style name ="TextStyle2MediumFont" parent="@style/TextStyle2">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Large Size override styles -->

    <style name="TextStyle1LargeFont" parent="@style/TextStyle1">
        <item name="android:textSize">38sp</item>
    </style>

    <style name ="TextStyle2LargeFont" parent="@style/TextStyle2">
        <item name="android:textSize">30sp</item>
    </style>


</resources>
